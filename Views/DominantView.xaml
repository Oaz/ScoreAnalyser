<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  xmlns:vm="clr-namespace:ScoreAnalyser.ViewModels;assembly=ScoreAnalyser"
  xmlns:local="clr-namespace:ScoreAnalyser" x:Class="ScoreAnalyser.Views.DominantView">
  <UserControl.Resources>
    <local:BitmapValueConverter x:Key="bitmapConverter"/>
  </UserControl.Resources>

  <Design.DataContext>
    <vm:DominantViewModel />
  </Design.DataContext>

  <Border Name="DominantBorder">
    <!-- ReSharper disable once Xaml.InvalidType -->
    <Image Width="50" Height="50" Margin="4" >
      <Image.Source>
        <Binding Path="ImagePath" Converter="{StaticResource bitmapConverter}" />
      </Image.Source>
    </Image>
  </Border>

</UserControl>
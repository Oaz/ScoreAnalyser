<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  xmlns:local="clr-namespace:ScoreAnalyser" x:Class="ScoreAnalyser.Views.DominantView">
  <UserControl.Resources>
    <local:BitmapValueConverter x:Key="bitmapConverter"/>
  </UserControl.Resources>

  <Border>
    <Image Source="{Binding Path, Converter={StaticResource bitmapConverter}}" Width="50" Height="50" Margin="4"/>
  </Border>

</UserControl>